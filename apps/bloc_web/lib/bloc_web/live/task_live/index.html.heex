<.modal :if={@live_action in [:new, :edit]} id="task-modal" show on_cancel={JS.patch(~p"/tasks")}>
  <.live_component
    module={BlocWeb.TaskLive.FormComponent}
    id={@task.id || :new}
    title={@page_title}
    action={@live_action}
    task={@task}
    patch={~p"/tasks"}
    current_user={@current_user}
  />
</.modal>

<.modal
  :if={@live_action in [:new_list, :edit_list]}
  id="task_list-modal"
  show
  on_cancel={JS.patch(~p"/tasks")}
>
  <.live_component
    module={BlocWeb.TaskLive.ListFormComponent}
    id={@task_list.id || :new_list}
    title={@page_title}
    action={@live_action}
    task_list={@task_list}
    patch={~p"/tasks"}
    current_user={@current_user}
  />
</.modal>
